---
import { SITE_TITLE } from '../consts';
---
<header class="modern-header">
  <div class="header-content">
    <a href="/" class="logo">Alex McCarthy Research</a>
    <nav class="main-nav">
      <a href="/blog">Blog</a>
      <a href="/about">About</a>
    </nav>
  </div>
</header>
<style>
.modern-header {
  background: linear-gradient(90deg, #232526 0%, #414345 100%);
  padding: 1.5rem 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}
header.modern-header {
  position: relative;
  z-index: 2;
}
.header-content {
  max-width: 960px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.logo {
  font-size: 2rem;
  font-weight: 700;
  color: #fff;
  text-decoration: none;
  letter-spacing: 1px;
}
.main-nav a {
  color: #fff;
  text-decoration: none;
  margin-left: 2rem;
  font-size: 1.1rem;
  font-weight: 500;
  transition: color 0.2s;
}
.main-nav a:hover {
  color: #00c6ff;
}
h1, h2, h3, h4, h5, h6 {
  color: #fff !important;
}
/* Ensure no image is rendered in the header */
img, .header-image {
  display: none !important;
}
/* Remove any accidental image above the header */
body > img, body > .header-image {
  display: none !important;
}
@media (max-width: 720px) {
  .header-content {
    flex-direction: column;
    gap: 1rem;
  }
  .main-nav a {
    margin-left: 1rem;
    font-size: 1rem;
  }
}
</style>
