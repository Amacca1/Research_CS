---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<style>
			body {
				background: #181a1b;
				font-family: 'Atkinson Hyperlegible', Arial, sans-serif;
				color: #e3e3e3;
			}
			.cloudsecure-style {
				max-width: 1100px;
				margin: 0 auto;
				padding: 2rem 0 4rem 0;
			}
			.cloudsecure-hero {
				background: linear-gradient(90deg, #232526 0%, #00c6ff 100%);
				color: #e3e3e3;
				border-radius: 24px;
				padding: 3rem 2rem;
				box-shadow: 0 4px 24px rgba(0,0,0,0.18);
				margin-bottom: 2.5rem;
				text-align: center;
			}
			.blog-title {
				font-size: 3rem;
				font-weight: 800;
				margin-bottom: 0.5rem;
				letter-spacing: 1px;
				color: #fff;
				text-shadow: 0 2px 8px rgba(0,0,0,0.18);
			}
			.blog-description {
				font-size: 1.35rem;
				margin-bottom: 1.5rem;
				color: #00c6ff;
				font-weight: 600;
				text-shadow: 0 2px 8px rgba(0,0,0,0.18);
			}
			.blog-list.cloudsecure-topics {
				background: #232526;
				border-radius: 24px;
				padding: 2.5rem;
				box-shadow: 0 2px 12px rgba(0,0,0,0.18);
			}
			.cloudsecure-list {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 1rem 2.5rem;
				margin: 0;
				padding: 0;
				list-style: none;
				font-size: 1.15rem;
				color: #e3e3e3;
			}
			.title {
				margin: 0;
				color: #e3e3e3;
				line-height: 1;
				font-size: 1.25rem;
				font-weight: 600;
			}
			.date {
				margin: 0;
				color: #00c6ff;
				font-size: 1rem;
			}
			.cloudsecure-list a {
				text-decoration: none;
				transition: 0.2s ease;
				display: block;
				padding: 0.75rem 1rem;
				border-radius: 12px;
			}
			.cloudsecure-list a:hover {
				background: #e0f7ff;
			}
			.cloudsecure-list a:hover h4,
			.cloudsecure-list a:hover .date {
				color: #232526;
			}
			.cloudsecure-list a:hover img {
				box-shadow: 0 4px 24px rgba(0,198,255,0.18);
			}
			.cloudsecure-list img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				width: 100%;
				height: auto;
				object-fit: cover;
			}
			.cloudsecure-list li {
				background: rgba(24,26,27,0.7);
				border-radius: 12px;
				margin-bottom: 0.5rem;
				color: #e3e3e3;
				box-shadow: 0 1px 4px rgba(0,0,0,0.12);
			}
			@media (max-width: 900px) {
				.cloudsecure-style {
					max-width: 100%;
					padding: 1rem;
				}
				.cloudsecure-hero, .blog-list.cloudsecure-topics {
					padding: 1.5rem;
				}
				.cloudsecure-list {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="blog-main cloudsecure-style">
			<section class="blog-header cloudsecure-hero">
				<h1 class="blog-title">Alex McCarthy â€” Research Blog</h1>
				<p class="blog-description">Insights, technical deep-dives, and project updates in automation, red teaming, and AI-driven vulnerability detection.</p>
			</section>
			<section class="blog-list cloudsecure-topics">
				<ul class="cloudsecure-list">
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
