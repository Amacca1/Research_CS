<style>
.modern-footer {
  background: linear-gradient(90deg, #232526 0%, #414345 100%);
  color: #fff;
  padding: 2rem 0 4rem 0;
  box-shadow: 0 -2px 8px rgba(0,0,0,0.04);
}
.footer-content {
  max-width: 960px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.footer-nav {
  display: flex;
  gap: 2rem;
  align-items: center;
}
.footer-nav a {
  color: #fff;
  text-decoration: none;
  font-size: 1.1rem;
  font-weight: 500;
  transition: color 0.2s;
}
.footer-nav a:hover {
  color: #00c6ff;
}
@media (max-width: 720px) {
  .footer-content {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }
  .footer-nav {
    gap: 1rem;
    justify-content: center;
  }
}
</style>
